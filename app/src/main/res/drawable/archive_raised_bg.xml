<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"/>
            <padding
                android:left="8dp"
                android:right="8dp" />
            <solid
                android:color="@color/pressedGrey" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"/>
            <size
                android:height="36dp" />
            <padding
                android:left="16dp"
                android:right="16dp" />
            <solid
                android:color="@color/normalGrey" />
        </shape>
    </item>


</selector>